@model PartViewModel

@{
    ViewData["Title"] = "Add new part";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="Name" class="form-control"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-md-2">
            <span asp-validation-for="Name" class="text-capitalize"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="Price" class="form-control"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="col-md-2">
            <span asp-validation-for="Price" class="text-capitalize"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="Quantity" class="form-control"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="col-md-2">
            <span asp-validation-for="Quantity" class="text-capitalize"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="Supplier.Name" class="form-control"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="Supplier.Name" class="form-control" />
        </div>
        <div class="col-md-2">
            <span asp-validation-for="Supplier.Name" class="text-capitalize"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="Supplier.IsImporter" class="form-control"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="Supplier.IsImporter" class="form-control" />
        </div>
        <div class="col-md-2">
            <span asp-validation-for="Supplier.IsImporter" class="text-capitalize"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">
        </div>
        <div class="col-md-2">
            <input type="submit" value="Save changes!" class="btn btn-default" />
        </div>
    </div>
</form>